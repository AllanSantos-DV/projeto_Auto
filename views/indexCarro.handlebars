<div class="container d-flex justify-content-center align-items-center flex-column">
    <div class="text-center mt-4">
        <h1>Carros Cadastrados</h1>
    </div>

    <div class="d-flex justify-content-center mb-3">
        <button type="button" class="btn btn-primary me-2" onclick="window.location.href='/pessoas/novo'">Cadastrar
            pessoas</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/carros/novo'">Cadastrar
            carros</button>
    </div>
</div>

<style>
    .card-img-container {
        height: 20cap;
        overflow: hidden;
    }
    .card-img-top {
        height: 20cap;
        object-fit: cover;
    }
</style>

<div class="row">
    {{#each carros}}
    <div class="col-sm-4 d-flex pb-4">
        <div class="card flex-fill d-flex flex-column">
            <div class="card-img-container">
                <img src="{{this.fotoLink}}" class="card-img-top" alt="{{this.modelo}} - {{this.marca}}">
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-auto">{{this.modelo}} - {{this.marca}}</h5>
                <p class="card-text">
                    Ano: {{this.ano}}<br>
                    Pre√ßo: R$ {{this.preco}}
                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>

