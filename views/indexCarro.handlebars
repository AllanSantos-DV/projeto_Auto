<div class="container d-flex justify-content-center align-items-center flex-column">
    <div class="text-center mt-4">
        <h1>Carros Cadastrados</h1>
    </div>

    <div class="d-flex justify-content-center mb-3">
        <button type="button" class="btn btn-primary me-2" onclick="window.location.href='/carros/novo'">Cadastrar
            carro</button>
        <button type="button" class="btn btn-secondary" onclick="window.location.href='/pessoas'">Listar
            pessoas</button>
    </div>
</div>

<div class="row">
    {{#each carros}}
    <div class="col-sm-4 d-flex pb-4">
        <div class="card flex-fill d-flex flex-column" style="cursor: pointer;" data-bs-toggle="modal"
            data-bs-target="#editCarModal-{{this.id}}">
            <div class="card-img-container" style="height: 20cap; overflow: hidden;">
                <img src="{{this.fotoLink}}" class="card-img-top" style="height: 20cap; object-fit: cover;"
                    alt="{{this.modelo}} - {{this.marca}}">
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-auto">{{this.modelo}} - {{this.marca}}</h5>
                <p class="card-text">
                    Ano: {{this.ano}}<br>
                    Pre√ßo: R$ {{this.preco}}
                    {{#if this.pessoa}}
                    <br>
                    Dono: {{this.pessoa.nome}}
                    {{/if}}
                </p>
            </div>
        </div>
    </div>

    <!-- Modal -->
    {{> carrosModal}}
    {{/each}}
</div>