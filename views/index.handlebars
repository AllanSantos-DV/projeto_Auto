<div class="container d-flex justify-content-center align-items-center flex-column">
    <div class="text-center mt-4">
        <h1>Cadastrados</h1>
    </div>

    <div class="d-flex justify-content-center mb-3">
        <button type="button" class="btn btn-primary me-2" onclick="window.location.href='/pessoas/novo'">Cadastrar
            pessoas</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/carros/novo'">Cadastrar
            carros</button>
    </div>
</div>

<div class="card" style="width: 100%; overflow-x: auto;">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Carros</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            {{#each pessoas}}
            <tr class="text-center">
                <td>{{this.id}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.idade}}</td>
                <td class="col-5">
                    {{#if this.carros}}
                    <select class="form-select me-2" onchange="redirecionar(this)">
                        <option selected value="/pessoas">Lista de Veiculos</option>
                        {{#each this.carros}}
                        <option value="/carros/{{this.id}}">{{this.modelo}} - {{this.marca}}</option>
                        {{/each}}
                    </select>
                    {{/if}}
                </td>
                <td class="align-items-center d-flex justify-content-center">
                    <div>
                        <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal"
                            data-bs-target="#editModal{{this.id}}">Editar</button>
                        <form action="/pessoas/delete/{{this.id}}" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Deletar</button>
                        </form>
                    </div>
                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="editModal{{this.id}}" tabindex="-1" aria-labelledby="editModalLabel{{this.id}}"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel{{this.id}}">Editar Pessoa</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editForm{{this.id}}">
                                <div class="mb-3">
                                    <label for="nome{{this.id}}" class="form-label">Nome</label>
                                    <input type="text" class="form-control" id="nome{{this.id}}" value="{{this.nome}}">
                                </div>
                                <div class="mb-3">
                                    <label for="idade{{this.id}}" class="form-label">Idade</label>
                                    <input type="number" class="form-control" id="idade{{this.id}}"
                                        value="{{this.idade}}">
                                </div>
                                {{#if this.carros}}
                                <div class="mb-3 text-center">
                                    <label for="carros{{this.id}}" class="form-label">
                                        <h5>Selecione Carros para remover</h5>
                                    </label><br>
                                    <label class="small text-muted">(Segure CTRL para marcar multiplos ou
                                        desmarcar)</label>
                                    <select class="form-select me-2" name="carros{{this.id}}" multiple>
                                        {{#each carros}}
                                        <option value="{{this.id}}">{{this.modelo}} - {{this.marca}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/if}}
                                {{#if this.carrosDisponiveis}}
                                <div class="mb-3 text-center">
                                    <label for="carrosDisponiveis{{this.id}}" class="form-label">
                                        <h5>Selecione Carros para adicionar</h5>
                                    </label><br>
                                    <label class="small text-muted">(Segure CTRL para marcar múltiplos)</label>
                                    <select class="form-select me-2" name="carrosDisponiveis{{this.id}}" multiple>
                                        {{#each carrosDisponiveis}}
                                        <option value="{{this.id}}">{{this.modelo}} - {{this.marca}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                {{/if}}
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                            <button type="button" class="btn btn-primary" onclick="salvarMudancas({{this.id}})">Salvar
                                mudanças</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
</div>

<script>

    function salvarMudancas(id) {
        if (id === null) return;
        var nome = document.getElementById('nome' + id).value;
        var idade = document.getElementById('idade' + id).value;
        var selectCarros = document.querySelector(`select[name="carros${id}"]`);
        var carrosParaRemover = selectCarros ? Array.from(selectCarros.selectedOptions).map(option => option.value) : [];

        var selectCarrosDisponiveis = document.querySelector(`select[name="carrosDisponiveis${id}"]`);
        var carrosParaAdicionar = selectCarrosDisponiveis ? Array.from(selectCarrosDisponiveis.selectedOptions).map(option => option.value) : [];


        var data = { nome: nome, idade: idade };

        fetch('/pessoas/update/' + id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        }).then(() => {
            if (carrosParaRemover.length > 0) {
                dessasociarCarro(id, carrosParaRemover);
            }
            if (carrosParaAdicionar.length > 0) {
                associarCarro(id, carrosParaAdicionar);
            }

            var myModal = new bootstrap.Modal(document.getElementById('editModal' + id));
            myModal.hide();
            location.reload();
        });
    }

    function dessasociarCarro(id, carros) {
        fetch('/carros/dessasociarCarro/' + id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ carros: carros })
        });
    }

    function associarCarro(id, carros) {
        fetch('/carros/associarCarro/' + id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ carros: carros })
        });
    }

    function redirecionar(select) {
        if (select === null) return;
        const url = select.value;
        select.value = "/pessoas";
        window.location.href = url;
    }
</script>